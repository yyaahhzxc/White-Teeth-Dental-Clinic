{
  "name": "white-teeth-dental-clinic",
  "version": "0.1.0",
  "description": "White Teeth Dental Clinic Management System",
  "author": "White Teeth Dental Clinic",
  "private": true,
  "main": "electron.js",
  "homepage": "./",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-draggable": "^4.5.0",
    "react-router-dom": "^7.8.0",
    "sqlite3": "^5.1.7",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "echo \"Tests not configured\"",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "pack": "electron-builder --dir",
    "build-desktop": "node build-desktop.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.whiteteeth.dentalclinic",
    "productName": "White Teeth Dental Clinic",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "src/backend/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "public/White-Teeth-Logo.png",
      "forceCodeSigning": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "nsis": false,
    "compression": "store",
    "publish": null
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.1",
    "concurrently": "^9.2.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "vite": "^7.1.3",
    "wait-on": "^8.0.4"
  }
}
